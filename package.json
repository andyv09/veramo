{
  "name": "veramo",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --experimental-json-modules\" yarn build:js && yarn build:api && yarn build:schema",
    "build:js": "lerna run build --stream",
    "build:api": "lerna run extract-api --stream",
    "build:schema": "lerna run generate-plugin-schema --stream",
    "lint": "echo \"linting not yet enabled\"",
    "test:integration-build": "yarn test:integration-prepare && yarn test:integration-pretty",
    "test:integration-prepare": "ts-node --esm --project packages/tsconfig.settings.json ./scripts/prepare-integration-tests.ts",
    "test:integration-pretty": "prettier --write __tests__/shared/documentationExamples.ts",
    "test:integration": "cross-env NODE_OPTIONS=\"--experimental-vm-modules \" yarn test:integration-build && yarn test:ci",
    "test:ci": "cross-env NODE_OPTIONS=\"--experimental-vm-modules \" jest --config=jest.config.json --coverage=true",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules \" jest --config=jest.config.json --",
    "test:watch": "yarn test --watch --verbose",
    "test:browser": "cd packages/test-react-app && yarn test:browser",
    "veramo": "./packages/cli/bin/veramo.js",
    "prettier": "prettier --write '{packages,docs,__tests__,!build}/**/*.{ts,js,json,md,yml}'",
    "build-clean": "rimraf ./packages/*/build ./packages/*/api ./packages/*/node_modules ./packages/*/tsconfig.tsbuildinfo && jest --clearCache",
    "publish:latest": "lerna publish --conventional-commits --include-merged-tags --create-release github --yes --dist-tag latest --registry https://registry.npmjs.org/:_authToken=${NPM_TOKEN}",
    "publish:next": "lerna publish --conventional-prerelease --force-publish --canary --no-git-tag-version --include-merged-tags --preid next --pre-dist-tag next --yes --registry https://registry.npmjs.org/:_authToken=${NPM_TOKEN}",
    "publish:unstable": "lerna publish --conventional-prerelease --force-publish --canary --no-git-tag-version --include-merged-tags --preid unstable --pre-dist-tag unstable --yes --registry https://registry.npmjs.org/:_authToken=${NPM_TOKEN}",
    "docs": "yarn docs:copy && yarn docs:build",
    "docs:copy": "ts-node --esm --project packages/tsconfig.settings.json ./scripts/docs-copy.ts",
    "docs:build": "ts-node --esm --project packages/tsconfig.settings.json ./scripts/docs-build.ts && yarn docs:pretty",
    "docs:pretty": "pretty-quick"
  },
  "workspaces": [
    "packages/*",
    "__browser_tests__/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-env": "^7.18.10",
    "@microsoft/api-documenter": "7.19.10",
    "@microsoft/api-extractor": "7.30.0",
    "@microsoft/api-extractor-model": "7.24.0",
    "@jest/console": "^27.5.1",
    "@jest/core": "^27.5.1",
    "@jest/globals": "^27.5.1",
    "@jest/reporters": "^27.5.1",
    "@jest/source-map": "^27.5.1",
    "@jest/test-result": "^27.5.1",
    "@jest/test-sequencer": "^27.5.1",
    "@libp2p/websockets": "^3.0.3",
    "@libp2p/webrtc-star": "^3.0.1",
    "@chainsafe/libp2p-noise": "8.0.1",
    "@libp2p/mplex": "^5.2.2",
    "@libp2p/bootstrap": "^2.0.0",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "28.1.1",
    "@types/node": "17.0.35",
    "babel-jest": "^27.5.1",
    "codecov": "3.8.3",
    "cross-env": "^7.0.3",
    "cross-fetch": "3.1.5",
    "ethr-did-registry": "1.0.1",
    "ganache": "7.3.0",
    "it-length-prefixed": "^8.0.2",
    "it-map": "^1.0.6",
    "it-pipe": "^2.0.4",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "jest-environment-node": "28.1.1",
    "jest-esm-transformer": "^1.0.0",
    "jest-fetch-mock": "3.0.3",
    "json-schema": "0.4.0",
    "lerna": "5.1.1",
    "lerna-changelog": "2.2.0",
    "libp2p": "^0.39.1",
    "oas-resolver": "2.5.6",
    "openapi-types": "12.0.0",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.3",
    "ts-jest": "28.0.4",
    "ts-json-schema-generator": "1.0.0",
    "ts-node": "10.8.1",
    "typescript": "4.7.3",
    "uint8arrays": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uport-project/veramo.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "resolutions": {
    "@types/react": "^18.0.12",
    "@types/eslint": "^8.4.3",
    "commander": "9.0.0",
    "ethr-did-resolver": "6.2.1"
  },
  "engines": {
    "node": ">= 16.16.0"
  },
  "type": "module",
  "moduleDirectories": [
    "node_modules",
    "**/src"
  ]
}
